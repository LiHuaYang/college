<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	
	xmlns:context="http://www.springframework.org/schema/context"
	
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">
	 
	 <!-- 
	 	类扫描的注解解释器
	 		component：指的就是一个类
	 		base-package：在该包和子包中进行扫描
	  -->
	<context:component-scan base-package="com.ioc_annotition"></context:component-scan>
	 
	<bean id="student_annotition" class="com.ioc_annotition.Student"></bean>
	<!-- <bean id="teacher_annotition" class="com.ioc_annotition.Teacher"></bean> -->
	
</beans>
